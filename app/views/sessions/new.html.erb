<%= form_with(url: sessions_path, local: true, method: 'post') do |form| %>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email, required: true %><br>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.text_field :password, required: true %><br>
  </div>

  <div>
    <%= select_tag(:option, options_for_select(["User", "Shop"])) %>  
  </div>
  
  <div>
    <%= form.submit :Login %>
  </div>
  <p><%= link_to "User Registration", new_user_path %><br></p> 
  <p><%= link_to "Shop Registration", new_shop_path %><br></p>
<% end %>
