<div class="container">
  <div class="jumbotron">
    <h1>Shop Name List</h1>
  </div>

  <div class="table-responsive">
	  <table class="table table-hover">
	    <thead>
	      <tr>
	        <th>Shop Name</th>
	        <th>Action</th>
	      </tr>
	      
	    </thead>
	    <tbody>
  				<% @shops.each do |shop| %>
	      	<tr>
		        <td><%= shop.name %></td>
		        <td><%= link_to "Menu Show", shop_path(shop.id) %></td>
		      </tr>
		     <% end %>
		    </tbody>
	  </table>
	</div> 
</div> 



