<div class="container">
  <div class="jumbotron">
    <h1>Shop Name List</h1>
  </div>

  <div class="table-responsive">
	  <table class="table table-hover">
	    <thead>
	      <tr>
	        <th>Shop Name</th>
	        <th>Action</th>
	        <th>Action</th>
	        <th>Action</th>
	      </tr>
	      
	    </thead>
	    <tbody>
  				<% @shops.each do |shop| %>
	      	<tr>
		        <td><%= shop.name %></td>
		        <td><%= link_to "Edit", edit_shop_path(shop.id) %></td>
		        <td><%= link_to "Show", menus_path %></td>
		        <td><%= link_to "Destroy", shop_path(shop.id), data: { turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>

		      </tr>
		     <% end %>
		    </tbody>
	  </table>
	</div> 
</div> 



