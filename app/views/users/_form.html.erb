<%= form_with model: @user do |form| %>

  <div>
    <%= form.label :FullName %><br>
    <%= form.text_field :fname %>
  </div>

  <div>
    <%= form.label :Email %><br>
    <%= form.email_field :email %><br>
  </div>

  <div>
    <%= form.label :mobile %><br>
    <%= form.text_field :mobile %><br>
  </div>

  <div>
    <%= form.label :gender %><br>
    <%= form.text_field :gender %><br>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %><br>
  </div>

  <div>
    <%= form.label :Confirmation %><br>
    <%= form.password_field :password_confirmation %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <p><%= link_to "User Login", new_session_path %><br></p> 
  <p><%= link_to "Shop Login", new_session_path %><br></p>
<% end %>
